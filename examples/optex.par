dm(n).push4imat    = 400;

//-------------------------------
nopt = 2;
opt = array(opts,nopt);

opt(1).phasemaps = "optics1.fits";
opt(1).path_type = "common";
opt(1).alt = 0.;

opt(2).phasemaps = "optics2.fits";
opt(2).path_type = "wfs";
opt(2).path_which = &([1,2]);
